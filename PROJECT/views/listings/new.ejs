<% layout("/layouts/boilerplate") %>
    
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create A New Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label"> Title:</label>
            <input type="text" class="form-control" name="listing[title]" placeholder="Add a Catchy Title" id="title">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description :</label>
            <textarea type="text" class="form-control" id="description" name="listing[description]" cols="15" rows="5" placeholder="Enter Description"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label"> Image Link :</label>
            <input type="text" id="image" class="form-control" name="listing[image]" placeholder="Enter image URL/Link">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price :</label>
                <input type="number" id="price" class="form-control" name="listing[price]" placeholder="1200">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country"class="form-label" >Country :</label>
                <input type="text" id="country" class="form-control" name="listing[country]" placeholder="India">
            </div>
            
        </div>
        <div class="mb-3">
            <label for="location"class="form-label" >Location :</label>
            <input type="text" id="location" class="form-control" name="listing[location]" placeholder="Jaipur,Rajasthan,etc.">
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br></br>
    </form>
</div>
</div>
